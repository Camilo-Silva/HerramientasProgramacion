@model TP2.Models.Car

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="MotorId" class="control-label"></label>
                <input asp-for="MotorId" class="form-control" />
                <span asp-validation-for="MotorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Motor" class="control-label"></label>
                <select asp-for="Motor" class="form-control">
                    <option value="0">Gasoline</option>
                    <option value="1">Diesel</option>
                    <option value="2">Electrical</option>
                    <option value="3">Gnc</option>
                </select>
                <span asp-validation-for="Motor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
